pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS' // Must match the name in Jenkins config
    }
    
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Build Next.js') {
            steps {
                sh 'npm run build'
            }
        }
        
        stage('Deploy') {
            steps {
                // Example: Deploy to Vercel
                sh 'npm install -g vercel'
                sh 'vercel --prod --token=$VERCEL_TOKEN'
                
                // OR if deploying to a server via SSH:
                // sh 'scp -r out/* user@server:/var/www/html'
            }
        }
    }
}