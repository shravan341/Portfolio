pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS' // Must match Jenkins Node.js installation name
    }
    
    stages {
        stage('Install') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        
        stage('Deploy') {
            steps {
                // Example: Deploy to Vercel
                sh 'npm install -g vercel'
                sh 'vercel --prod --token=$VERCEL_TOKEN'
            }
        }
    }
}